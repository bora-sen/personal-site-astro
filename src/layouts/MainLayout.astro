---
import Footer from "./Footer.astro"
import Header from "./Header.astro"
const { title, description, keywords } = Astro.props
import "./index.css"
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={keywords} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preload" href="/assets/fonts/fonts.css" as="style" onload="this.rel='stylesheet'" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@700&family=Open+Sans:wght@400;500;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
