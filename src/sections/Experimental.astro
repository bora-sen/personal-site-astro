---
import { experimentalWorks } from "../dataset.json"
---

<section class="w-full text-center my-12">
  <h3 class="text-9xl font-tusker">Deneysel Projeler</h3>
  <div class="flex flex-col gap-24 lg:gap-0 lg:flex-row my-12">
    <div class="w-full h-full md:w-1/2">
      <video autoplay loop class="w-full h-full object-cover object-center">
        <source src={experimentalWorks[0].placeholderVideoURL} />
      </video>
      <div class="flex flex-col justify-center items-center my-4 gap-3">
        <span class="text-6xl font-tusker-bold">{experimentalWorks[0].title}</span>
        <a
          class="mx-auto border-2 border-white px-4 py-2 rounded-full hover:bg-white hover:text-black hover:text-bold transition-all"
          href={experimentalWorks[0].redURL}
        >
          Projeye Git
        </a>
      </div>
    </div>

    <div class="w-full h-full md:w-1/2">
      <video autoplay loop class="w-full h-full object-cover object-center">
        <source src={experimentalWorks[1].placeholderVideoURL} />
      </video>
      <div class="flex flex-col justify-center items-center my-4 gap-3">
        <span class="text-6xl font-tusker-bold">{experimentalWorks[1].title}</span>
        <a
          class="mx-auto border-2 border-white px-4 py-2 rounded-full hover:bg-white hover:text-black hover:text-bold transition-all"
          href={experimentalWorks[1].redURL}
        >
          Projeye Git
        </a>
      </div>
    </div>
  </div>
</section>
