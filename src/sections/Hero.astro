<section id="hero_section" class="w-full h-screen text-white bg-[url(/assets/hero_bg_mobile.webp)] lg:bg-[url(/assets/hero_bg.webp)] bg-center bg-cover">
  <div class="w-full h-screen flex sm:flex-row flex-col lg:justify-between">
    <div id="hero_titles" class="absolute bottom-3 md:w-[45rem] mt-auto">
      <div class="grid font-tusker-bold leading-none ml-2">
        <span class="hero_text text-[5rem] sm:text-[6rem] md:text-[6rem] opacity-0">Freelance</span>
        <span class="hero_text text-[8rem] sm:text-[10rem] md:text-[10rem] opacity-0">Full-Stack</span>
        <span class="hero_text text-[6rem] sm:text-[8rem] md:text-[10rem] opacity-0">Geliştirici</span>
      </div>
    </div>
    <div id="hero_desc_text" class="font-paragraph absolute right-0 text-right font-bold grid text-[1.4rem] lg:text-5xl xl:text-6xl pt-5">
      <span class="hero_desc_text opacity-0">DENEYİMLEMEK,</span>
      <span class="hero_desc_text opacity-0">GELiŞTiRMEK</span>
      <span class="hero_desc_text opacity-0">VE SÜREKLİ</span>
      <span class="hero_desc_text opacity-0">SINIRLARI ZORLAMAK.</span>
    </div>
  </div>
</section>

<script>
  import { Power4, gsap } from "gsap"
  import { ScrollTrigger } from "gsap/ScrollTrigger"
  gsap.registerPlugin(ScrollTrigger)

  document.addEventListener("DOMContentLoaded", () => {
    gsap.fromTo(
      ".hero_text",
      {
        opacity: 0,
      },
      {
        opacity: 1,
        stagger: 0.04,
        duration: 0.67,
        delay: 0.5,
        ease: Power4.easeOut,
      }
    )
    gsap.fromTo(
      ".hero_desc_text",
      {
        opacity: 0,
      },
      {
        opacity: 1,
        duration: 0.35,
        stagger: 0.18,
        delay: 0.4,
        ease: Power4.easeOut,
      }
    )

    const scrollTl = gsap.timeline({
      scrollTrigger: {
        trigger: "#hero_section",
        start: "center center",
        end: "bottom top",
        scrub: 1.4,
      },
    })
    scrollTl.to("#hero_section", {})
  })
</script>
